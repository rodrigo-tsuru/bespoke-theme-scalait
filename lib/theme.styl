@import 'normalizecss/normalize.css'

$purple = #3e3a84
$white = #fcfcfd

@font-face {
  font-family: 'Cantarell';
  font-style: normal;
  font-weight: 400;
  src: local('Cantarell Regular'), local('Cantarell-Regular'), url(fonts/cantarell.woff2) format('woff2');
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000;
}

body
 color: $white
 font-family: 'Cantarell', sans-serif !important

.bespoke-parent
  text-size-adjust: auto
  background: $white
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  transition: opacity .5s ease
  background-image: url('images/logo.svg') !important;
  background-size: 30% !important;
  background-repeat: no-repeat !important;
  background-attachment: fixed;
  background-position: 15px 15px !important; 
  width: 640px
  height: 480px
  background: $purple
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.bespoke-active
  transition-delay: .5s


.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet
  transition: opacity .3s ease

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  background-color=cccccc
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: #ccc
  transition: width .6s ease

.emphatic
  background: #222

.emphatic-text
  color: white

